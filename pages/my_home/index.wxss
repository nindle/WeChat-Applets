.root {
  height: 100vh;
  background: #F3F4F5;
  box-shadow: 0px -15px 10px -15px rgba(0,0,0,0.06) inset;
}
.user_card {
  height: 490rpx;
  padding: 30rpx;
  background: linear-gradient(180deg, #FF241C 0%, #F3F4F5 100%);
}
.user {
  display: flex;
  justify-content: space-between;
}
.name {
  width: 100%;
  display: flex;
  border: none;
  background-color: rgba(255, 255, 255, 0);
  align-items: center;
}
.name:after { 
  display: none;
}
.user_pic {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 25rpx;
}
.user_info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-evenly;
}
.unlogin {
  width: 100%;
  height: 100%;
}
.user_name {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  margin-bottom: 7rpx;
  height: 50rpx;
}
.user_phone {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  opacity: 0.7
}
.settings {
  width: 48rpx;
  height: 48rpx;
}
.settings_img {
  width: 100%;
  height: 100%;
}
.commonlyused {
  margin-top: 40rpx;
  height: 235rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}
.commonlyused_title {
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  margin: 27rpx 30rpx;
  display: inline-block;
}
.commonlyused_item {
  display: flex;
  overflow: hidden;
}
.item {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  padding: 0;
  margin: 0;
  height: 140rpx;
  line-height: 45rpx;
}
button {
  display: block;
  border: none;
  margin: 0;
  background-color: #FFFFFF;
}
button::after {
  border: none;
  display: none;
}
.item_pic {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 11rpx;
}
.other {
  margin-top: 25rpx;
  height: 211rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
}
.other_title {
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  margin: 27rpx 30rpx;
  display: inline-block;
}
.other_item {
  display: flex;
  overflow: hidden;
}
.item1 {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  padding: 0;
  margin: 0;
  line-height: 45rpx;
}
.item_pic1 {
  width: 46rpx;
  height: 46rpx;
  margin-bottom: 11rpx;
}